# Fitness MCP Server Environment Configuration
# Copy this to .envrc and update with your actual credentials

# Strava OAuth2 Configuration
# Option 1: Use auth-setup command to get tokens automatically
# Option 2: Set these manually if you already have tokens
export STRAVA_CLIENT_ID="your_strava_client_id"
export STRAVA_CLIENT_SECRET="your_strava_client_secret"
# export STRAVA_ACCESS_TOKEN="your_access_token"  # Optional - use auth-setup instead
# export STRAVA_REFRESH_TOKEN="your_refresh_token"  # Optional - use auth-setup instead

# Garmin Configuration (future implementation)
# export GARMIN_USERNAME="your_username"
# export GARMIN_PASSWORD="your_password"

# Runkeeper Configuration (future implementation)
# export RUNKEEPER_ACCESS_TOKEN="your_access_token"

# Server Configuration
export RUST_LOG="info"
export MCP_SERVER_PORT="8080"

# Development settings
export CARGO_TERM_COLOR="always"