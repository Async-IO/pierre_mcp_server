{
  "servers": {
    "pierre": {
      "type": "http",
      "url": "http://localhost:8081/mcp",
      "headers": {
        "Authorization": "Bearer ${PIERRE_JWT_TOKEN}"
      }
    },
    "chrome-devtools": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest", "--chrome-arg=--no-sandbox", "--chrome-arg=--disable-dev-shm-usage"]
    },
    "ios-simulator": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "ios-simulator-mcp@latest"]
    }
  }
}
