{
  "name": "@pierre/api-client",
  "version": "0.1.0",
  "description": "Shared API client for Pierre web and mobile frontends",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "react-native": "./src/index-mobile.ts",
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./adapters/web": {
      "import": "./src/adapters/web.ts",
      "types": "./src/adapters/web.ts"
    },
    "./adapters/mobile": {
      "import": "./src/adapters/mobile.ts",
      "types": "./src/adapters/mobile.ts"
    }
  },
  "files": [
    "src"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@pierre/shared-types": "*",
    "axios": "^1.13.4"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  }
}
