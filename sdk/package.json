{
  "name": "pierre-mcp-client",
  "version": "0.1.1",
  "description": "MCP client for Pierre Fitness MCP Server - works with Claude Desktop, ChatGPT, and any MCP host",
  "main": "dist/index.js",
  "bin": {
    "pierre-mcp-client": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "prepare": "npm run build",
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration --runInBand",
    "test:e2e": "jest --testPathPattern=test/e2e --runInBand",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:legacy:sse": "node test/test_sse_claude_desktop.js",
    "test:legacy:e2e": "node test/test_e2e_claude_desktop.js",
    "test:legacy:stdio": "node test/test_claude_desktop.js",
    "test:legacy:oauth": "node test/test_oauth_flow.js",
    "test:legacy:tools": "node test/test_tools_list.js",
    "inspect": "npx @modelcontextprotocol/inspector node dist/cli.js",
    "inspect:cli": "npx @modelcontextprotocol/inspector --cli node dist/cli.js"
  },
  "keywords": [
    "mcp",
    "pierre",
    "claude",
    "fitness",
    "oauth",
    "streamable-http",
    "model-context-protocol",
    "strava",
    "garmin",
    "chatgpt"
  ],
  "author": "Pierre Fitness Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Async-IO/pierre_mcp_server.git",
    "directory": "sdk"
  },
  "homepage": "https://github.com/Async-IO/pierre_mcp_server/tree/main/sdk#readme",
  "bugs": {
    "url": "https://github.com/Async-IO/pierre_mcp_server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/node-fetch": "^2.6.13",
    "commander": "^11.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "verbose": true,
    "collectCoverage": false,
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(node-fetch)/)"
    ],
    "transform": {}
  }
}
