{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path mapping for workspace packages */
    "baseUrl": ".",
    "paths": {
      "@pierre/shared-types": ["../packages/shared-types/src"],
      "@pierre/shared-types/*": ["../packages/shared-types/src/*"],
      "@pierre/shared-constants": ["../packages/shared-constants/src"],
      "@pierre/shared-constants/*": ["../packages/shared-constants/src/*"],
      "@pierre/eslint-config": ["../packages/eslint-config-pierre"],
      "@pierre/eslint-config/*": ["../packages/eslint-config-pierre/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx", "src/test/**/*", "src/**/__tests__/**/*"]
}
